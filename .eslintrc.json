{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        
        "semi":["error", "always"],
        "comma-dangle": 0,
        "curly": ["error", "multi"],
        "brace-style":"warn",
        "indent": "warn",
        "space-before-function-paren": ["warn", "never"],
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-use-before-define": "off",

      "no-unused-vars": "off",
      "no-undef": "off"
      
    }
}